@model Electronic_Bank.Models.Client

@{
	ViewData["Title"] = "Edit";
}
<div style="margin:50px">
	<h1>Edit</h1>

	<h4>Client</h4>
	<hr />
</div>

<body style="background: #f2edf3;">
	<div class="col-md-10  stretch-card text-center" style="margin-left: 104px;">
		<div class="card">
			<form asp-action="Edit">
				<input type="hidden" asp-for="ClientID" />
				<div class="card-body">
					<h4 class="card-title text-white">Todo</h4>

					<div class="add-items d-flex">
						<input class="form-control todo-list-input" placeholder="Client Name" asp-for="ClientName"  />

					</div>
					<div class="add-items d-flex">
						<input class="form-control todo-list-input" placeholder="Client Address" asp-for="ClientAddress"  />

					</div>
					<div class="add-items d-flex">
						<input class="form-control todo-list-input" placeholder="Client Phone Number" asp-for="ClientPhone"  />
					</div>
					<div class="add-items d-flex">
						<input type="file" class="form-control todo-list-input" placeholder="Client profile Image" asp-for="ClientImg" />
						<span asp-validation-for="ClientPhone" class="text-danger"></span>

					</div>
					<input type="submit" value="Save" class="btn btn-primary" />
					<a asp-action="Index" class="btn btn-secondary">Back to List</a>
				</div>
			</form>
		</div>
	</div>
</body>

