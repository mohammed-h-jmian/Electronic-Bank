@model IEnumerable<Electronic_Bank.Models.Client>

@{
	ViewData["Title"] = "Index";
}




<div class="row" style="margin:20px; flex-wrap: nowrap;">
	<h1 class="col-10">Index</h1>

	<p class="col-2">
		<a class="btn btn-success" asp-action="Create">Create New</a>
	</p>
</div>
<body style="    background: #f2edf3;">
	<div class="row">
		<div class="col-12 grid-margin">
			<div class="card" style="margin:25px">
				<div class="card-body">
					<h4 class="card-title">Recent Tickets</h4>
					<div class="table-responsive">
						<table class="table">
							<thead>
								<tr>
									<th> Name </th>
									<th> Address </th>
									<th> Phone </th>
									<th>  </th>
									
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>
											<img src="~/images/ProfileImage/@item.ClientImg" class="me-2" alt="image"> @item.ClientName
										</td>
										<td> @item.ClientAddress </td>
										<td> @item.ClientPhone </td>
										<td>
											<a class="btn badge badge-gradient-success" asp-action="Edit" asp-route-id="@item.ClientID">Edit</a>
											<a class="btn badge badge-gradient-success" asp-action="Details" asp-route-id="@item.ClientID">Wallets</a>
											<a class="btn badge badge-gradient-success" asp-action="Delete" asp-route-id="@item.ClientID">Delete</a>
										</td>

									</tr>
								}


							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
</body>